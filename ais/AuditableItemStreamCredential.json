{
	"type": "object",
	"properties": {
		"@context": {
			"anyOf": [
				{
					"type": "string",
					"const": "https://schema.twindev.org/ais/"
				},
				{
					"type": "array",
					"minItems": 1,
					"items": [
						{
							"type": "string",
							"const": "https://schema.twindev.org/ais/"
						}
					],
					"additionalItems": {
						"type": "string"
					}
				}
			],
			"description": "JSON-LD Context."
		},
		"type": {
			"type": "string",
			"const": "AuditableItemStreamCredential",
			"description": "JSON-LD Type."
		},
		"dateCreated": {
			"type": "string",
			"description": "The date/time of when the stream was created."
		},
		"userIdentity": {
			"type": "string",
			"description": "The identity of the user which added the stream."
		},
		"hash": {
			"type": "string",
			"description": "The hash of the stream."
		},
		"signature": {
			"type": "string",
			"description": "The signature of the stream."
		}
	},
	"required": ["@context", "type", "dateCreated", "userIdentity", "hash", "signature"],
	"additionalProperties": false,
	"description": "Interface describing the immutable credential for a stream."
}
